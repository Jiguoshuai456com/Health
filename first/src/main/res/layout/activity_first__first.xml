<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.first_FirstActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.stx.xhb.xbanner.XBanner
            android:id="@+id/first_xb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200">

        </com.stx.xhb.xbanner.XBanner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <View
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#3087ea"
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_25">
            </View>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#3087ea"
                android:text="知识宝典"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#cccc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#de333333"
                    android:textSize="14sp"
                    android:text="常见病状"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/first_bingzheng"
                    android:layout_width="@dimen/dp_157"
                    android:layout_height="@dimen/dp_157" />
                <View
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#cccc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4">

                </View>

            </LinearLayout>
            <View
                android:background="#cccc"
                android:layout_width="@dimen/dp_6"
                android:layout_height="match_parent">

            </View>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#de333333"
                    android:textSize="14sp"
                    android:text="常用药品"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/first_yao"
                    android:layout_width="@dimen/dp_157"
                    android:layout_height="@dimen/dp_157" />
                <View
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#cccc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4">

                </View>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <View
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#3087ea"
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_25">
            </View>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#3087ea"
                android:text="知识宝典"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>



</ScrollView>